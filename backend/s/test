#!/usr/bin/env bash
set -e

main() {
  export TESTING=1

  # shellcheck disable=SC2124
  ARGS="${@}"

  if [[ "${ARGS}" == *'--watch'* ]]; then
    ARGS="${ARGS/'--watch'/}"
    # shellcheck disable=SC2086
    ./.venv/bin/ptw -- $ARGS
  else
    # shellcheck disable=SC2086
    ./.venv/bin/pytest $ARGS
  fi
}

main "$@"
