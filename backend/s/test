#!/usr/bin/env bash
set -e

main() {
  export TESTING=1
  export DATABASE_URL=postgres://postgres@127.0.0.1:5432/postgres
  export DEBUG=1
  export DJANGO_SETTINGS_MODULE="recipeyak.django.settings"

  # shellcheck disable=SC2124
  ARGS="${@}"

  if [[ "${ARGS}" == *'--watch'* ]]; then
    ARGS="${ARGS/'--watch'/}"
    # shellcheck disable=SC2086
    ./.venv/bin/ptw -- $ARGS
  else
    # shellcheck disable=SC2086
    ./.venv/bin/pytest $ARGS
  fi
}

main "$@"
