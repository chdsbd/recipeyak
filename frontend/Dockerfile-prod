FROM node:8-alpine

RUN mkdir -p /var/app

# Install package.json /var/ so we can mount at /app and not have issues with dependences
# http://stackoverflow.com/a/33106611/3555105
COPY package.json /var/
WORKDIR /var/
RUN npm install

WORKDIR /var/app
COPY . /var/app
RUN npm run build

FROM alpine
RUN mkdir -p /var/app/build
COPY --from=0 /var/app/build /var/app/build
COPY --from=0 /var/app/bootstrap.sh /var/app/
WORKDIR /var/app
