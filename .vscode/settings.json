{
  "editor.formatOnSave": true,
  "javascript.format.enable": true,
  "typescript.format.enable": true,
  "files.insertFinalNewline": true,
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "python.defaultInterpreterPath": "${workspaceFolder}/backend/.venv/bin/python",
  "python.envFile": "${workspaceFolder}/.vscode/.env",
  "python.testing.pytestArgs": ["backend"],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "typescript.tsdk": "frontend/node_modules/typescript/lib",
  "eslint.lintTask.enable": true,
  "eslint.validate": [
    "javascriptreact",
    "javascript",
    "html",
    "typescript",
    "typescriptreact"
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "python.languageServer": "Pylance",
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "[scss]": {
    "editor.tabSize": 2
  },
  "[python]": {
    "editor.tabSize": 4,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    }
  },
  "[typescript]": {
    "editor.tabSize": 2
  },
  "[typescriptreact]": {
    "editor.tabSize": 2
  },
  "[javascript]": {
    "editor.tabSize": 2
  },
  "[javascriptreact]": {
    "editor.tabSize": 2
  },
  "scss.format.enable": true,
  "python.testing.autoTestDiscoverOnSaveEnabled": false,
  "python.testing.promptToConfigure": false,
  "explorer.excludeGitIgnore": true,
  "editor.detectIndentation": false,
  "mypy-type-checker.cwd": "${workspaceFolder}/backend",
  "mypy-type-checker.importStrategy": "fromEnvironment",
  "mypy-type-checker.interpreter": [
    "${workspaceFolder}/backend/.venv/bin/python3"
  ],
  "mypy-type-checker.args": ["--config-file=pyproject.toml"],
  "prettier.ignorePath": "frontend/.prettierignore",
  "search.useParentIgnoreFiles": true,
  "search.useGlobalIgnoreFiles": true,
  // Until https://github.com/microsoft/vscode/issues/26574 is fixed
  "search.exclude": {
    "**/.git": true,
    "**/node_modules": true,
    "**/tmp": true,
    "**/dist": true,
    "**/lib": true,
    "**/generated": true,
    "**/.eslintcache": true,
    "**/.mypy_cache": true,
    "**/stats.html": true
  }
}
