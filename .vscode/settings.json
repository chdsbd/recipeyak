{
  "editor.formatOnSave": true,
  "javascript.format.enable": true,
  "typescript.format.enable": true,
  "files.insertFinalNewline": true,
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "python.defaultInterpreterPath": "${workspaceFolder}/backend/.venv/bin/python",
  "python.envFile": "${workspaceFolder}/.env",
  "python.testing.pytestArgs": ["backend"],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "typescript.tsdk": "frontend/node_modules/typescript/lib",
  "eslint.lintTask.enable": true,
  "eslint.validate": [
    "javascriptreact",
    "javascript",
    "html",
    "typescript",
    "typescriptreact"
  ],
  "eslint.workingDirectories": [
    {
      "directory": "frontend",
      "changeProcessCWD": true
    }
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.removeUnusedImports": true
  },
  "python.languageServer": "Pylance",
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[python]": {
    "editor.tabSize": 4,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "scss.format.enable": true,
  "python.testing.autoTestDiscoverOnSaveEnabled": false,
  "python.testing.promptToConfigure": false,
  "explorer.excludeGitIgnore": true,
  "editor.detectIndentation": false,
  "prettier.ignorePath": "frontend/.prettierignore",
  "search.useParentIgnoreFiles": true,
  "search.useGlobalIgnoreFiles": true,
  // Until https://github.com/microsoft/vscode/issues/26574 is fixed
  "search.exclude": {
    "**/.git": true,
    "**/node_modules": true,
    "**/tmp": true,
    "**/dist": true,
    "**/lib": true,
    "**/generated": true,
    "**/.eslintcache": true,
    "**/.mypy_cache": true,
    "**/stats.html": true
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "tailwindCSS.experimental.classRegex": [
    // clx function calls
    ["clx\\(([^]*)\\)", "(?:'|\"|`)([^\"'`]*)(?:'|\"|`)"]
    // js string variables
    // "(?:const|let|var)\\s+[\\w$_][_\\w\\d]*\\s*=\\s*['\\\"](.*?)['\\\"]",
    // js object
    // ":\\s*?[\"'`]([^\"'`]*).*?,"
  ],
  "tailwindCSS.classAttributes": [
    "class",
    "className",
    "ngClass",
    ".*styles.*",
    ".*css.*",
    ".*cls.*"
  ],
  "mypy.dmypyExecutable": "${workspaceFolder}/backend/.venv/bin/dmypy"
}
